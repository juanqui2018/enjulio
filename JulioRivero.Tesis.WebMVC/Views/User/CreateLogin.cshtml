
@{
    ViewBag.Title = "CreateLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Login = "Class = active";
}

    <center><h2>Acceso para usuario</h2></center>
        <div class="row">
            <label style="color:red">@ViewBag.messageLogin</label>
            <div class="col-md-12 form-horizontal">
                <form action="/User/CreateLogin" method="post">
                    <br />
                    <div class="form-group">
                        <label class="col-lg-1">Usuario: </label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="usr" placeholder="Apellido Paterno" required autofocus>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label class="col-lg-1">password: </label>
                        <div class="col-lg-4">
                            <input type="password" class="form-control" name="pwd" placeholder="Cedula Identidad" required>
                        </div>
                    </div>
                    <br />
                        <button class="btn btn-primary" type="submit">
                            Aceptar
                        </button>
                        <a href='@Url.Action("Index", "Home")'>
                            <input type='button' class="btn" value='Cancelar' />
                        </a>
                        @*<button class="btn">
                            Cancelar
                        </button>*@
                </form>
            </div>
        </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


