
    @model IEnumerable<JulioRivero.Tesis.WebMVC.Models.UserViewModel>


    @{
        ViewBag.Title = "Usuario";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
        ViewBag.User = "class = active";
    }
<div class="text-center">
    <h2>Bienvenido al sistema "@ViewBag.LastNameUser"</h2>
    <h2>Lista de usuarios</h2>
</div>
    
<div class=" col-md-1">
    <a href="/User/Create" data-toggle="tooltip" title="Crear Usuario"><span class="glyphicon glyphicon-plus " aria-hidden="true"></span></a>
</div>
    <table class="table  table-condensed table-hover">
        <tr class="active info" id="tablas">
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ci)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ci)
                </td>
                <td>
                    <a href="/User/Edit/@item.Id" data-toggle="tooltip" title="Editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    @*<text>|</text>*@
                    <a href="/User/Delete/@item.Id" data-toggle="tooltip" title="Eliminar"><span class="glyphicon  glyphicon-trash" aria-hidden="true" style="color:red"></span></a>

                </td>
            </tr>
        }

    </table>
