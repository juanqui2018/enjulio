<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body >
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="font-family:'Merriweather Sans', sans-serif;font-size:12px;;">
        <div class="container">
            <div class="navbar-header">
                <!-- FOR MOBILE VIEW COLLAPSED BUTTON -->
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- LOGO -->
                <a class="navbar-brand" href="#"><span style="color:#fff;"></span></a>


            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul id="top-menu" class="nav navbar-nav navbar-right main-nav">
                    <li @ViewBag.Inicio>@Html.ActionLink("HOME", "Index", "Home")</li>
                    <li @ViewBag.Impairment class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">DISCAPACIDAD<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            @foreach (var item in ViewBag.impairmentsMenu)
                            {
                                <li><a href="@String.Format("/Impairment/Details/{0}", item.Id)">@item.Name</a></li>
                            }
                        </ul>
                    </li>
                    <li @ViewBag.Prevention class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">PREVENCION<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            @foreach (var prevention in ViewBag.preventionsMenu)
                            {
                                <li><a href="@String.Format("/Prevention/Details/{0}", prevention.Id)">@prevention.Name</a></li>
                            }
                        </ul>
                    </li>
                    <li @ViewBag.Right class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">DERECHOS <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            @foreach (var prevention in ViewBag.rightsMenu)
                            {
                                <li><a href="@String.Format("/Right/OpenPDF/{0}", prevention.Id)">@prevention.Title</a></li>
                            }
                        </ul>
                    </li>
                    <li @ViewBag.Login>@Html.ActionLink("LOGIN", "CreateLogin", "User")</li>
                </ul>
            </div><!--/.nav-collapse //nameMenu-->
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - By: Julio Rivero A.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
