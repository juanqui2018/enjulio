@model JulioRivero.Tesis.WebMVC.Models.PreventionViewModel

@{
    ViewBag.Title = "Prevención";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Prevention = "class = active";
}

<div class="container text-center  container-fluid" style="background-color:#EFFBFB;color:#0B3861;">
    <h2>@Html.DisplayFor(model => model.Kind) @Html.DisplayFor(model => model.Name)</h2>
    <p>@Html.DisplayFor(model => model.Description)</p>
</div>

@if (ViewBag.ownData != null)
{
    <ul class="nav nav-tabs">
        @foreach (var item in ViewBag.ownData)
        {
            <li><a data-toggle="tab" href="#@item.Id">@item.Title</a></li>
        }
    </ul>
    <div class="tab-content">
        @foreach (var item in ViewBag.ownData)
        {
            <div id="@item.Id" class="tab-pane fade">
                <h2 class="text-center">@item.Title </h2>

                <div class="panel panel-primary">
                    <div class="panel-heading">Imagen</div>
                    <div class="panel-body">
                        <div>
                            <center> <img src="@Url.Content(item.FileImage)" alt="IMAGES" height="400" width="700" /> </center>
                        </div>
                    </div>
                </div>

                <div class="panel panel-primary">
                    <div class="panel-heading">DESCRIPCIOM</div>
                    <div class="panel-body">
                        <div>
                            @item.Description
                        </div>
                    </div>
                </div>

                <div class="panel panel-primary">
                    <div class="panel-heading">PREVENCION</div>
                    <div class="panel-body">
                        <div>
                            @item.Prevention
                        </div>
                    </div>
                </div>
                <hr />
            </div>
        }
    </div>
}
