@model IEnumerable<JulioRivero.Tesis.WebMVC.Models.DeficiencyViewModel>

@{
    ViewBag.Title = "Deficiencia";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Impairment = "class = active";
}
<div class="text-center">
    <h2>Bienvenido al sistema "@ViewBag.LastNameUser"</h2>
    <h3>Lista de Deficiencias</h3>
</div>

<div class=" col-md-1">
    <a href="/Deficiency/Create" data-toggle="tooltip" title="Crear Discapacidad"><span class="glyphicon glyphicon-plus " aria-hidden="true"></span></a>
</div>

<table class="table  table-condensed table-hover">
    <tr class="active info" id="tablas">
        <th>
            @Html.DisplayNameFor(model => model.Kind)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Introduction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Symptom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prevention)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kind)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Introduction)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Symptom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prevention)
        </td>
        <td>
            <img src="@Url.Content(item.FileImage)" alt="IMAGES" height="50" width="70" />
        </td>
        <td>
            <a href="/Deficiency/Edit/@item.Id" data-toggle="tooltip" title="Editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
            @*<text>|</text>*@
            <a href="/Deficiency/Delete/@item.Id" data-toggle="tooltip" title="Eliminar"><span class="glyphicon  glyphicon-trash" aria-hidden="true" style="color:red"></span></a>

        </td>
    </tr>
}

</table>
